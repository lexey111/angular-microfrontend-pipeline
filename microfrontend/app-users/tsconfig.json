{
    "compilerOptions": {
        "lib": [
            "DOM",
            "ESNext"
        ],
        "target": "ES2015",
        "module": "ESNext",
        "allowSyntheticDefaultImports": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "strict": true,
        "moduleResolution": "node",
        "suppressImplicitAnyIndexErrors": true,
        "isolatedModules": true,
        "jsx": "react"
    },
    "include": [
        "./src"
    ]
}